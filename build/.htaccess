# Enable CORS and set CSP headers
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Content-Security-Policy "default-src * 'unsafe-inline' 'unsafe-eval'; connect-src *; script-src * 'unsafe-inline' 'unsafe-eval'; frame-src *; img-src * data: https:; style-src * 'unsafe-inline'; font-src *; worker-src * blob:; child-src *;"
</IfModule>

# Serve static multi-page HTML; disable SPA rewrites
# Let Apache serve files and directories as-is; no catch-all to index.html
# Use a proper 404 page for missing routes
ErrorDocument 404 /404.html