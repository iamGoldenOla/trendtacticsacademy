# Traditional static HTML routing for subdomain
RewriteEngine On

# Directly serve existing files and directories
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^.*$ - [L]

# For non-existing paths, try the corresponding .html file
RewriteRule ^(.+)$ $1.html [L,QSA]

# Ensure clean URLs work properly
Options -MultiViews

# Content Security Policy to allow Supabase connections
<IfModule mod_headers.c>
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://unpkg.com https://cdnjs.cloudflare.com; connect-src 'self' https://uimdbodamoeyukrghchb.supabase.co https://*.supabase.co; img-src 'self' data: https:; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; font-src 'self' https://cdnjs.cloudflare.com;"
</IfModule>