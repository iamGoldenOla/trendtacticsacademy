# Enable rewrite engine
RewriteEngine On

# Redirect /home to /
RewriteRule ^home$ / [L,R=301]

# Redirect index.html to /
RewriteRule ^index\.html$ / [L,R=301]

# Do not rewrite API calls
RewriteCond %{REQUEST_URI} ^/api/
RewriteRule ^ - [L]

# Serve existing files and directories (critical for navigation)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# For requests that aren't files/directories, check for .html version
# This allows /about to map to /about.html if it exists
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+?)/?$ $1.html [L]

# Dynamic Course Routes
RewriteRule ^course/([^/]+)/?$ /course.html?slug=$1 [L,QSA]
RewriteRule ^learn/([^/]+)/?$ /learn.html?course_id=$1 [L,QSA]

# Redirect old hardcoded course routes to new dynamic routes
RewriteRule ^course-detail/?$ /course/vibe-coding [R=301,L]
RewriteRule ^prompt-engineering/?$ /course/prompt-engineering [R=301,L]
RewriteRule ^facebook-ads/?$ /course/facebook-ads [R=301,L]

# For the React app - fallback to index.html only for root and unmatched routes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/course/
RewriteCond %{REQUEST_URI} !^/learn/
RewriteRule ^(.*)$ /index.html [L]

Options -MultiViews

# Content Security Policy to allow Supabase connections and YouTube embeds
<IfModule mod_headers.c>
    # Disable caching for HTML files (always get fresh content)
    <FilesMatch "\.html?$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # Cache static assets with version headers (long-term caching)
    <FilesMatch "\.(js|css)$">
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
    
    <FilesMatch "\.(jpg|jpeg|png|gif|svg|webp|ico|woff|woff2)$">
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
    
