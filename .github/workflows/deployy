name: Deploy Academy to FTP

on:
  push:
    branches:
      - master
  workflow_dispatch:

jobs:
  build-and-deploy:
    name: ğŸ‰ Build & Deploy React App
    runs-on: ubuntu-latest

    env:
      REACT_APP_SUPABASE_URL: ${{ secrets.SUPABASE_URL }}
      REACT_APP_SUPABASE_ANON_KEY: ${{ secrets.SUPABASE_ANON_KEY }}

    steps:
      - name: ğŸšš Checkout repository
        uses: actions/checkout@v4

      - name: ğŸ“¦ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
          cache: 'npm'
          cache-dependency-path: 'lms-frontend/package-lock.json'

      - name: ğŸ“¥ Install dependencies
        working-directory: lms-frontend
        run: npm ci

      - name: ğŸ”¨ Build React app
        working-directory: lms-frontend
        run: npm run build
        env:
          CI: false

      - name: âœ… Verify build
        working-directory: lms-frontend
        run: |
          echo "ğŸ“ Build directory contents:"
          ls -la build/
          if [ -f "build/index.html" ]; then
            echo "âœ… index.html found"
          else
            echo "âŒ index.html NOT found"
            exit 1
          fi

      - name: ğŸš€ Deploy to FTP
        uses: SamKirkland/FTP-Deploy-Action@v4.3.5
        with:
          server: ${{ secrets.FTP_HOST }}
          username: ${{ secrets.FTP_USERNAME }}
          password: ${{ secrets.FTP_PASSWORD }}
          server-dir: /home/trendta1/public_html/academy.trendtacticsdigital.com/
          local-dir: lms-frontend/build/
          protocol: ftp
          port: 21
          exclude: |
            **/.git*
            **/.git*/**
            **/node_modules/**

      - name: ğŸŠ Deployment Success
        run: |
          echo "âœ… Deployment completed successfully!"
          echo "ğŸŒ Website: https://academy.trendtacticsdigital.com"
          echo "â±ï¸ Changes may take a few minutes to appear"
