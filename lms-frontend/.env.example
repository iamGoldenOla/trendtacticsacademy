# ============================================================================
# TrendTactics Academy - Environment Variables
# ============================================================================

# Application
NODE_ENV=development
REACT_APP_NAME=TrendTactics Academy
REACT_APP_VERSION=1.0.0

# API Configuration
# Set to 'true' when backend API is ready, 'false' to use Supabase adapter
REACT_APP_USE_API_BACKEND=false
REACT_APP_API_BASE_URL=http://localhost:3001/api

# Supabase Configuration (Temporary - until backend is ready)
REACT_APP_SUPABASE_URL=your_supabase_url_here
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Authentication
REACT_APP_JWT_SECRET=your_jwt_secret_here
REACT_APP_JWT_EXPIRY=15m
REACT_APP_REFRESH_TOKEN_EXPIRY=7d

# Security
REACT_APP_ENABLE_RATE_LIMITING=true
REACT_APP_MAX_LOGIN_ATTEMPTS=5
REACT_APP_LOCKOUT_DURATION=3600000

# File Upload
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_MAX_VIDEO_SIZE=524288000
REACT_APP_ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,zip

# CDN Configuration
REACT_APP_CDN_URL=https://cdn.trendtacticsacademy.com
REACT_APP_ASSETS_URL=https://assets.trendtacticsacademy.com

# Analytics
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_MIXPANEL_TOKEN=

# Error Tracking
REACT_APP_SENTRY_DSN=

# Payment Gateway
REACT_APP_STRIPE_PUBLIC_KEY=
REACT_APP_PAYPAL_CLIENT_ID=

# Social Login
REACT_APP_GOOGLE_CLIENT_ID=
REACT_APP_FACEBOOK_APP_ID=
REACT_APP_GITHUB_CLIENT_ID=

# Feature Flags
REACT_APP_ENABLE_SOCIAL_LOGIN=false
REACT_APP_ENABLE_PAYMENTS=false
REACT_APP_ENABLE_CERTIFICATES=true
REACT_APP_ENABLE_DISCUSSIONS=true
REACT_APP_ENABLE_LIVE_SESSIONS=false

# Performance
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_ENABLE_CODE_SPLITTING=true
REACT_APP_ENABLE_LAZY_LOADING=true

# Development
REACT_APP_ENABLE_REDUX_DEVTOOLS=true
REACT_APP_ENABLE_CONSOLE_LOGS=true
REACT_APP_MOCK_API_DELAY=1000

